        <Button Margin="368,0,0,0" VerticalAlignment="Top" Height="23.5" FontSize="20" Background="Transparent" Foreground="White" Click="Button_Click"  Template="{DynamicResource CloseButton}"/>
        <Label Content="Presented by the Data Mining and Security Lab&#xD;&#xA;McGill University" HorizontalAlignment="Left" Margin="25.5,70.5,0,0" VerticalAlignment="Top" Foreground="#FFFDFDFD" Width="349.5" Height="56"/>
